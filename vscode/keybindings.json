// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "cmd+t cmd+right",
        "command": "workbench.action.terminal.focusNext"
    },
    {
        "key": "cmd+t cmd+left",
        "command": "workbench.action.terminal.focusPrevious"
    },
    {
        "key": "cmd+t cmd+a",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+shift+[Equal]",
        "command": "-workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "cmd+t cmd+n",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "cmd+t cmd+t",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "cmd+t cmd+1",
        "command": "workbench.action.terminal.focusAtIndex1"
    },
    {
        "key": "cmd+t cmd+2",
        "command": "workbench.action.terminal.focusAtIndex2"
    },
    {
        "key": "cmd+t cmd+3",
        "command": "workbench.action.terminal.focusAtIndex3"
    },
    {
        "key": "cmd+t cmd+4",
        "command": "workbench.action.terminal.focusAtIndex4"
    },
    {
        "key": "cmd+t cmd+v",
        "command": "workbench.action.terminal.paste"
    },
    {
        "key": "cmd+e",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "cmd+t cmd+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+k cmd+s",
        "command": "python.sortImports",
        "when": "editorTextFocus && editorLangId == 'python'"
    },
    {
        "key": "cmd+k cmd+c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+k cmd+c",
        "command": "-editor.action.addCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+7",
        "command": "-gitlens.showCommitSearch",
        "when": "gitlens:enabled"
    },
    {
        "key": "cmd+k cmd+f",
        "command": "-editor.action.formatSelection",
        "when": "editorHasSelection && editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+k cmd+f",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+f",
        "command": "-editor.action.formatDocument",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+k cmd+s",
        "command": "-workbench.action.openGlobalKeybindings"
    },
    {
        "key": "shift+alt+7",
        "command": "-gitlens.showCommitSearch",
        "when": "gitlens:enabled && gitlens:keymap == 'standard'"
    },
    {
        "key": "cmd+t cmd+r",
        "command": "python.runtests"
    },
    {
        "key": "cmd+t cmd+o",
        "command": "python.selectAndRunTestFile"
    },
    {
        "key": "cmd+t cmd+f",
        "command": "python.runCurrentTestFile"
    },
    {
        "key": "cmd+k cmd+s",
        "command": "sort-imports.sort",
        "when": "editorTextFocus && editorLangId == 'javascript'"
    },
    {
        "key": "cmd+l cmd+s",
        "command": "editor.action.sortLinesAscending",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+[IntlBackslash]",
        "command": "editor.action.transformToUppercase"
    },
    {
        "key": "cmd+k cmd+g",
        "command": "extension.showGitmoji"
    },
    {
        // thanks @ https://stackoverflow.com/users/11107541/starball
        // for this https://stackoverflow.com/a/76886742/179444
        "key": "cmd+k cmd+c",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.scm.focus",
                "list.focusFirst",
                "list.select"
            ]
        },
        "when": "gitOpenRepositoryCount == 1"
    },
    {
        "key": "cmd+k cmd+o",
        "command": "git.commit"
    }
]
