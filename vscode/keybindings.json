// Place your key bindings in this file to overwrite the defaults
[
    {
        "command": "workbench.action.terminal.focusNext",
        "key": "cmd+t cmd+right"
    },
    {
        "command": "workbench.action.terminal.focusPrevious",
        "key": "cmd+t cmd+left"
    },
    {
        "command": "workbench.action.terminal.toggleTerminal",
        "key": "cmd+t cmd+a"
    },
    {
        "command": "-workbench.action.terminal.toggleTerminal",
        "key": "ctrl+shift+[Equal]"
    },
    {
        "command": "workbench.action.terminal.new",
        "key": "cmd+t cmd+n"
    },
    {
        "command": "workbench.action.terminal.focus",
        "key": "cmd+t cmd+t"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex1",
        "key": "cmd+t cmd+1"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex2",
        "key": "cmd+t cmd+2"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex3",
        "key": "cmd+t cmd+3"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex4",
        "key": "cmd+t cmd+4"
    },
    {
        "command": "workbench.action.terminal.paste",
        "key": "cmd+t cmd+v"
    },
    {
        "command": "workbench.action.focusActiveEditorGroup",
        "key": "cmd+e"
    },
    {
        "command": "workbench.action.terminal.kill",
        "key": "cmd+t cmd+w",
        "when": "terminalFocus"
    },
    {
        "command": "python.sortImports",
        "key": "cmd+k cmd+s",
        "when": "editorTextFocus && editorLangId == 'python'"
    },
    {
        "command": "editor.action.commentLine",
        "key": "cmd+k cmd+c",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-editor.action.addCommentLine",
        "key": "cmd+k cmd+c",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-gitlens.showCommitSearch",
        "key": "shift+alt+7",
        "when": "gitlens:enabled"
    },
    {
        "command": "-editor.action.formatSelection",
        "key": "cmd+k cmd+f",
        "when": "editorHasSelection && editorTextFocus && !editorReadonly"
    },
    {
        "command": "editor.action.formatDocument",
        "key": "cmd+j cmd+f",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-editor.action.formatDocument",
        "key": "shift+alt+f",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-workbench.action.openGlobalKeybindings",
        "key": "cmd+k cmd+s"
    },
    {
        "command": "-gitlens.showCommitSearch",
        "key": "shift+alt+7",
        "when": "gitlens:enabled && gitlens:keymap == 'standard'"
    },
    {
        "command": "python.runtests",
        "key": "cmd+t cmd+r"
    },
    {
        "command": "python.selectAndRunTestFile",
        "key": "cmd+t cmd+o"
    },
    {
        "command": "python.runCurrentTestFile",
        "key": "cmd+t cmd+f"
    },
    {
        "command": "editor.action.sortLinesAscending",
        "key": "cmd+j cmd+s",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.transformToUppercase",
        "key": "ctrl+[IntlBackslash]"
    },
    {
        // thanks @ https://stackoverflow.com/users/11107541/starball
        // for this https://stackoverflow.com/a/76886742/179444
        "args": {
            "commands": [
                "workbench.scm.focus",
                "list.focusFirst",
                "list.select"
            ]
        },
        "command": "runCommands",
        "key": "cmd+g cmd+c",
        "when": "gitOpenRepositoryCount == 1"
    },
    {
        "command": "git.commit",
        "key": "cmd+g cmd+o"
    },
    {
        "command": "editor.action.organizeImports",
        "key": "cmd+k cmd+s",
        "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
    },
    {
        "command": "-editor.action.organizeImports",
        "key": "shift+alt+o",
        "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
    },
    {
        "key": "alt+k",
        "command": "aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible && !composerControlPanelIsVisible"
    },
    {
        "key": "cmd+k",
        "command": "-aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible && !composerControlPanelIsVisible"
    },
    {
        "key": "alt+k",
        "command": "cursorai.action.generateInTerminal",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "cmd+k",
        "command": "-cursorai.action.generateInTerminal",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+enter",
        "command": "-github.copilot.generate",
        "when": "editorTextFocus && github.copilot.activated && !commentEditorFocused && !inInteractiveInput && !interactiveEditorFocused"
    },
    {
        "key": "cmd+i",
        "command": "composerMode.agent"
    },
    {
        "key": "ctrl+a",
        "command": "-cursorLineStart",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+a",
        "command": "workbench.action.quickOpenView"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quickOpenView"
    },
    {
        "key": "ctrl+a",
        "command": "workbench.action.quickOpenNavigateNextInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quickOpenNavigateNextInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.quickOpenNavigatePreviousInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {
        "key": "ctrl+shift+q",
        "command": "-workbench.action.quickOpenNavigatePreviousInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    }
]
