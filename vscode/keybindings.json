// Place your key bindings in this file to overwrite the defaults
[
    {
        "command": "workbench.action.terminal.focusNext",
        "key": "cmd+t cmd+right"
    },
    {
        "command": "workbench.action.terminal.focusPrevious",
        "key": "cmd+t cmd+left"
    },
    {
        "command": "workbench.action.terminal.toggleTerminal",
        "key": "cmd+t cmd+a"
    },
    {
        "command": "-workbench.action.terminal.toggleTerminal",
        "key": "ctrl+shift+[Equal]"
    },
    {
        "command": "workbench.action.terminal.new",
        "key": "cmd+t cmd+n"
    },
    {
        "command": "workbench.action.terminal.focus",
        "key": "cmd+t cmd+t"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex1",
        "key": "cmd+t cmd+1"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex2",
        "key": "cmd+t cmd+2"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex3",
        "key": "cmd+t cmd+3"
    },
    {
        "command": "workbench.action.terminal.focusAtIndex4",
        "key": "cmd+t cmd+4"
    },
    {
        "command": "workbench.action.terminal.paste",
        "key": "cmd+t cmd+v"
    },
    {
        "command": "workbench.action.focusActiveEditorGroup",
        "key": "cmd+e"
    },
    {
        "command": "workbench.action.terminal.kill",
        "key": "cmd+t cmd+w",
        "when": "terminalFocus"
    },
    {
        "command": "python.sortImports",
        "key": "cmd+k cmd+s",
        "when": "editorTextFocus && editorLangId == 'python'"
    },
    {
        "command": "editor.action.commentLine",
        "key": "cmd+k cmd+c",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-editor.action.addCommentLine",
        "key": "cmd+k cmd+c",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-gitlens.showCommitSearch",
        "key": "shift+alt+7",
        "when": "gitlens:enabled"
    },
    {
        "command": "-editor.action.formatSelection",
        "key": "cmd+k cmd+f",
        "when": "editorHasSelection && editorTextFocus && !editorReadonly"
    },
    {
        "command": "editor.action.formatDocument",
        "key": "cmd+k cmd+f",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-editor.action.formatDocument",
        "key": "shift+alt+f",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "command": "-workbench.action.openGlobalKeybindings",
        "key": "cmd+k cmd+s"
    },
    {
        "command": "-gitlens.showCommitSearch",
        "key": "shift+alt+7",
        "when": "gitlens:enabled && gitlens:keymap == 'standard'"
    },
    {
        "command": "python.runtests",
        "key": "cmd+t cmd+r"
    },
    {
        "command": "python.selectAndRunTestFile",
        "key": "cmd+t cmd+o"
    },
    {
        "command": "python.runCurrentTestFile",
        "key": "cmd+t cmd+f"
    },
    {
        "command": "editor.action.sortLinesAscending",
        "key": "cmd+l cmd+s",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.transformToUppercase",
        "key": "ctrl+[IntlBackslash]"
    },
    {
        // thanks @ https://stackoverflow.com/users/11107541/starball
        // for this https://stackoverflow.com/a/76886742/179444
        "args": {
            "commands": [
                "workbench.scm.focus",
                "list.focusFirst",
                "list.select"
            ]
        },
        "command": "runCommands",
        "key": "cmd+g cmd+c",
        "when": "gitOpenRepositoryCount == 1"
    },
    {
        "command": "git.commit",
        "key": "cmd+g cmd+o"
    },
    {
        "command": "editor.action.organizeImports",
        "key": "cmd+k cmd+s",
        "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
    },
    {
        "command": "-editor.action.organizeImports",
        "key": "shift+alt+o",
        "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
    }
]
